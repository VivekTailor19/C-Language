//Using Nested Function Calculator
#include<stdio.h>
float add(float a,float b);
float sub(float a,float b);
float multi(float a,float b);
float div(float a,float b);
int mod(int a,int b);
main()
{
	float a,b;
	add(a,b);
}
float add(float a,float b)
{
	printf("Enter the Numbers --\n");
	scanf("%f%f",&a,&b);
	printf("%f + %f = %f",a,b,a+b);
	sub(a,b);
	multi(a,b);
	div(a,b);
	mod(a,b);
}
float sub(float a,float b)
{
	printf("\n%f - %f = %f",a,b,a-b);
}
float multi(float a,float b)
{
	printf("\n%f * %f = %f",a,b,a*b);
}
float div(float a,float b)
{
	printf("\n%f / %f = %f",a,b,a/b);
}
int mod(int a,int b)
{
	int c;
	c =a%b;
	printf("\n%d mod %d = %d",a,b,c);
}
